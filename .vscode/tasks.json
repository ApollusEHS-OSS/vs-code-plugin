// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "webpack && watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "autopep8 current file",
			"type": "process",
			"command": "${config:python.pythonPath}",
			"args": ["storybook", "--ci"]
		},
		{
			"label": "Boot Storybook",
			"type": "process",
			"command": "${config:aesop.Chronicle}",
			"args": ["storybook", "--ci"],
			"group": "none",
			"presentation": {
				"reveal": "never",
				"focus": false,
				"clear": true,
				"panel": "shared"
			},
			"detail": "Aesop: Chronicle"
		}
	]
}

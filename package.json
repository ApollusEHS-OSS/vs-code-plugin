{
	"name": "aesop",
	"displayName": "Aesop",
	"description": "An IDE-native suite for previewing Storybook files.",
	"version": "0.0.7",
	"publisher": "async-aesop",
	"repository": "https://github.com/Async-Aesop/aesop",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.aesopAwaken",
		"workspaceContains:**/node_modules/@storybook/core/package.json"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.aesopAwaken",
				"title": "Aesop Awaken"
			},
			{
				"command": "extension.aesopChronicle",
				"title": "Aesop Chronicle"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Configuration",
			"properties": {
				"aesop.port": {
					"type": "number",
					"default": 8509,
					"description": "Port number"
				},
				"aesop.host": {
					"type": "string",
					"default": "localhost",
					"description": "Host address"
				},
				"aesop.storyRegex": {
					"type": "string",
					"default": "**/*.story.*",
					"description": "A regular expression that picks up Storybook files in your root project folder."
				},
				"aesop.storybookFilterRegex": {
					"type": "string",
					"default": ".",
					"description": "A regular expression to filter Storybook stories appearing in explorer view."
				}
			}
		},
		"keybindings": [
			{
				"command": "extension.aesopAwaken",
				"key": "ctrl+k a",
				"mac": "cmd+k a"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.aesopChronicle",
					"when": "configuration == aesop-awake"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "storybook-view",
					"name": "Storybook x Aesop",
					"when": "aesop-awake"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "storybook-aesop",
					"title": "Storybook",
					"icon": "resources/storybook-icon.png",
					"when": "aesop-awake"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/express": "^4.17.2",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.21",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"ts-loader": "^6.2.1",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2",
		"webpack": "^4.41.4",
		"webpack-cli": "^3.3.10"
	},
	"dependencies": {
		"@storybook/channel-websocket": "^5.2.8",
		"express": "^4.17.1",
		"npm": "^6.13.4",
		"ps-node": "^0.1.6",
		"vsce": "^1.71.0",
		"ws": "^7.2.1"
	}
}
